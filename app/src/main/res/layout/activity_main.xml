<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14584E"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <AutoCompleteTextView
        android:id="@+id/actv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="390dp"
        android:completionThreshold="1"
        android:hint="Enter Codes Here"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#007A1111"
        android:textColorHint="#BFEEE7E7"
        android:textColorLink="#F7F5ECEC" />

    <Button
        android:id="@+id/proceed_to_tors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/actv"
        android:layout_alignBottom="@+id/actv"
        android:layout_marginBottom="-66dp"
        android:background="#F3A8AB"
        android:enabled="false"
        android:text="Proceed" />


</RelativeLayout>